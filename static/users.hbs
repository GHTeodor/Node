<!doctype html>
<html lang=uk>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./users_all.css">
    <title>USERS</title>
</head>
<body>
<header>
    <a href="/login">Login</a>
    <a href="/">API</a>
    <a href="/errors">Errors</a>
    <a href="/singIn">SingIn</a>
</header>

<h1>USERS</h1>
<div class="users">
    {{#each users}}
        <div id="user" style="display: flex; justify-content: space-between; align-items: center">
            <div>
                <div>|{{this.firstName}}</div>
                <div>|{{this.lastName}}</div>
                <div>|{{this.email}}</div>
                <div>|{{this.password}}</div>
                <div>|{{this.age}}</div>
                <div>|{{this.city}}</div>
            </div>
            <a href="/users/{{this.id}}">
                <button>Click Info</button>
            </a>
        </div>
    {{/each}}
</div>
</body>
</html>